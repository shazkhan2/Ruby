<h1>Admin Dashboard</h1>

<h2>All Users</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'View Tasks', user_tasks_path(user) %>
          <td>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<h2>All Tasks</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Assigned To</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.user.email if task.user %></td>
        <td>
        <% if task.user %>
        <%= button_to 'Delete', user_task_path(task.user, task), method: :delete, class: 'delete-button', data: { confirm: 'Are you sure you want to delete this task?' } %>
      <% else %>
        <p>No user assigned</p>
      <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
