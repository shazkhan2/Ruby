<div class="container">

<div> class="details"
<h1><%= @task.title %></h1>

<p> <strong>Description: </strong>
<%= @task.description %>
</p>

<p> <strong>Due Date: </strong>
<%= @task.due_date %>
</p>

<p> <strong>Status: </strong>
<%= @task.status.present? ?@task.status.humanize: "unknown" %>
</p>
</div>

<div class= "crud">
<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li><%= button_to 'Delete', task_path(@task) , method: :delete , data:{ confirm: "Do you want to Delete"} %> 

    <li>
    <%= link_to "Back", tasks_path %>
    </li>
</ul>
</div>
</div>

