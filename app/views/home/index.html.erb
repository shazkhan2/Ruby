<h1>Tasks List</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, user_task_path(current_user, task) %>
    </li>
    <li><%= task.description %></li>
    <li><%= task.due_date %></li>
    <li><%= task.status %></li>
  <% end %>
</ul>

<%= link_to 'New Task', new_user_task_path(current_user) %>
