<head>
  <%= stylesheet_link_tag "show_task", media: "all", "data-turbo-track": "reload" %>
</head>

<div class="details">
  <h1><%= @task.title %></h1>

  <p><strong>Description: </strong> <%= @task.description %></p>
  <p><strong>Due Date: </strong> <%= @task.due_date %></p>
  <p><strong>Status: </strong> <%= @task.status.present? ? @task.status.humanize : "unknown" %></p>
</div>

<div class="crud-actions">
  <div class="crud">
    <%= link_to "Edit", edit_user_task_path(current_user, @task), class: 'crud-link' %>
  </div>
  
  <div class="crud">
    <%= button_to 'Delete', user_task_path(@task), method: :delete, class: 'crud-link', data: { confirm: "Do you want to Delete" } %>
  </div>
  
  <div class="crud">
    <%= link_to "Back", user_tasks_path(current_user), class: 'crud-link' %>
  </div>
</div>