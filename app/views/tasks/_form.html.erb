<div class="form_fields">
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :due_date %><br>
    <%= form.date_field :due_date %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, selected: @task.status || "pending" %>
  </p>
  <p>
  <%= form.label :user_id, "Assign To" %> <br>
  <%= form.collection_select :user_id, User.all, :id, :email, include_blank: true %>
    </p>
</div>

<div class="submit">
  <p>
    <%= form.submit @task.new_record? ? 
    "Create Task" : "Update Task" %>
  </p>
</div>
